extends ../layout

include ../mixins/_navbar

block header
  +navbar()
  
block content
  .section
  main
    center
      .section
      .container
        .z-depth-1.grey.lighten-4.row(style='padding: 32px 48px 0px 48px; border: 1px solid #EEE;')
          form.col.s12(action="/account" method="POST")
            .row
              .col.s12
                h4 Edit your Account
            .row
              .input-field.col.s12
                i.material-icons.prefix.fa.fa-user-o
                input#name(type='text', name='name', value=user.name)
                label(for='name') Name
            .row
              .input-field.col.s12
                i.material-icons.prefix.fa.fa-envelope-o
                input#email.validate(type='email', name='email', value=user.email)
                label(for='email') Email
            br
            center
              .row
                button.col.s12.btn.btn-large.waves-effect.primary-blue(type='submit', name='btn-update') Update 
