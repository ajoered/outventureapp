mixin navbar()
  body(style='background-color:white!important')
    nav.nav-extended.z-depth-0.blue-grey.darken-4
      .nav-wrapper.container
        a.brand-logo(href='/')
          img(src='https://res.cloudinary.com/dx1s7kdgz/image/upload/v1494986580/outventure_white-01_gofmj3.png', alt='Logo')
        a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
        ul.right.hide-on-med-and-down
          li
            a(href='#')
              i.material-icons.left.fa.fa-globe(aria-hidden='true')
              | Explore
          li
            a(href='#')
              i.material-icons.left.fa.fa-group(aria-hidden='true')
              | Connect
          li
            a(href='#') About us
          if user
            li
              a.dropdown-button(href='#', data-activates='feature-dropdown', data-beloworigin='true', data-constrainwidth='false')
                img.avatar(src=user.gravatar + 'd=retro')
                i.material-icons.right arrow_drop_down
            ul#feature-dropdown.dropdown-content
              li
                a(href='#') My Account
              li
                a(href='/logout') Logout
          else
            li
              a.waves-effect.waves-light.btn.light-blue.darken-4(href='/login' style='color:white!important')
                | Login
              a.waves-effect.waves-light.btn.light-blue.darken-4(href='/register' style='margin-left:-10px;color:white!important')
                | Register
    ul#nav-mobile.side-nav
      li
        a(href='#')
          i.material-icons camera
          | Profile
      li.active
        a(href='#')
          i.material-icons brightness_3
          | Discover Plans
      li
        a(href='#')
          i.material-icons edit
          | Create Plans
      li
        a(href='#')
          i.material-icons school
          | Blog
      li
        a(href='#')
          i.material-icons fullscreen
          | Activities
      li
        a(href='#')
          i.material-icons swap_horiz
          | FAQ
        ul#feature-dropdown.dropdown-content
          li
            a(href='#') My Account
          li
            a(href='#') Logout
