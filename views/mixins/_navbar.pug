mixin navbar()
  .navbar-fixed
    nav
      .nav-wrapper.scrolled
        // logo
        a.brand-logo(href='/')
          img#nav-logo(src='https://res.cloudinary.com/dx1s7kdgz/image/upload/v1496716199/OUTVENTURE-03_bnkfhn.png', alt='Logo')
        // Hamburger
        a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
        // Desktop menu items
        ul.left.hide-on-med-and-down(style='padding-left:20vw;')
          li
            a(href='/')
              i.left.fa.fa-search(aria-hidden='true')
              | DISCOVER
          li
            a.dropdown-button(href='#', data-activates='create-dropdown', data-beloworigin='true', data-constrainwidth='true')
              i.left.fa.fa-plus-square-o(aria-hidden='true')
              | CREATE
              i.material-icons.right arrow_drop_down
          li
            a.dropdown-button(href='#', data-activates='about-us-dropdown', data-beloworigin='true', data-constrainwidth='true')
              | ABOUT US
              i.material-icons.right arrow_drop_down
        // desktop profile items
        if user
          ul.right.hide-on-med-and-down
            li
              a.heart-count(href='/account' style='font-size:28px;') #{user.hearts.length}
            li(style="margin-left:-10px;padding-right:15px;")
              i.left.fa.fa-heart-o(aria-hidden='true')
            li(style="padding-top:8px")
              img.avatar(src=`/uploads/${user.photo}`|| '/images/photos/user.png')
            li
              a.dropdown-button(href='#', data-activates='profile-dropdown', data-beloworigin='true', data-constrainwidth='true')=user.name
                i.material-icons.right arrow_drop_down
        else
          ul.right.hide-on-med-and-down
            a.waves-effect.waves-light.btn.grey.lighten-5(href='/login', style='color:black!important;') Login
            a.waves-effect.waves-light.btn.primary-blue(href='/register', style='margin-left:-10px;color:white!important;') Sign up
          // Dropdown Structures
        ul#profile-dropdown.dropdown-content
          li
            a(href='/account') My Account
          li
            a(href='/logout') Logout
        ul#about-us-dropdown.dropdown-content
          li
            a(href='#') Our Purpose
          li
            a(href='#') Blog
        ul#create-dropdown.dropdown-content
          li
            a(href='/addPlan') Plan Idea
          li
            a(href='#') Outing
        ul#nav-mobile.side-nav
          // user view
          li
            .userView
              .background
                img(src='https://www.beautycolorcode.com/006062-2880x1800.png')
              a(href='#!user')
                img.circle(src='https://avatars2.githubusercontent.com/u/22107549?v=3&s=460')
              a(href='#!name')
                span.white-text.name Alvaro Rojas
              a(href='#!email')
                span.white-text.email arojas@gmail.com
          // Profile
          li
            a.subheader My Profile
          li.no-padding
          li
            a(href='#!')
              i.material-icons perm_identity
              | My Account
          li
            a(href='#')
              i.material-icons edit
              | Create Plan
          // Main Menu
          li
            a.subheader Main Menu
          li
            a(href='#')
              i.material-icons language
              | Explore Plans
          li
            a(href='#')
              i.material-icons supervisor_account
              | Connect
          li
            a(href='#')
              i.material-icons info_outline
              | About Us
          li
            a(href='#')
              i.material-icons picture_in_picture
              | Blog
