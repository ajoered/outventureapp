mixin reviewForm(plan)
  center
    .section
      .z-depth-1.grey.lighten-4.row(style='padding: 32px 48px 0px 48px; border: 1px solid #EEE;')
        form.col.s12(action=`/reviews/${plan._id}` method="POST")
          p.text-700.center-align Rate this awesome adventure!
            .reviewer__stars
              each num in [5,4,3,2,1]
                input(type="radio" id=`star${num}` name="rating" value=num)
                label(for=`star${num}`) 
          br    
          p.center-align Tips for future adventurers?
          .row
            .input-field
              textarea(name="text" placeholder='"Such an incredible experience..."' class="materialize-textarea")
          .row      
            input.btn(type="submit" value="Submit Review â†’")
